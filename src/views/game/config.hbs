<header class="w-full flex justify-center items-center">
    <button id="backToHome" class="button-normal active text-white rounded-full">Back</button>
</header>
<main class="mt-16">
    <section id="selectGameTime" class="w-full flex flex-col justify-center items-center">
        <div class="bg-white w-max px-8 py-4 flex flex-col justify-center items-center gap-4 rounded-2xl">
            <h3 class="text-4xl text-primary-shadow">Select Time Mode</h3>
            <div class="flex flex-col gap-2 w-max">
                <button data-button="60" class="time-button text-white rounded-lg button-small">60s</button>
                <button data-button="120" class="time-button text-white rounded-lg button-small">120s</button>
                <button data-button="300" class="time-button text-white rounded-lg button-small">300s</button>
            </div>

        </div>
        <div class="bg-white w-max px-8 py-4 flex flex-col justify-center items-center gap-4 rounded-2xl">
            <h3 class="text-4xl text-primary-shadow">Select Game Size</h3>
            <div class="flex flex-col gap-2 w-max">
                <button data-button="4x4" class="size-button button-normal text-white rounded-lg">4 x 4</button>
                <button data-button="4x5" class="size-button button-normal text-white rounded-lg">4 x 5</button>
            </div>
        </div>
        <div class="bg-white w-max px-8 py-4 flex flex-col justify-center items-center gap-4 rounded-2xl">
            <div class="w-full">
                <button id="startGame" class="w-full button-normal text-white hover:bg-primary rounded-lg">Start Game</button>
            </div>
        </div>
    </section>
</main>