<html>
<head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="/stylesheets/style.css"/>
    <!--    CDN Font Awesome-->
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
        integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
    />

    <!--    CSS File-->
    <link rel="stylesheet" href="/stylesheets/index.style.css"/>
    <link rel="stylesheet" href="/stylesheets/icon.custom.css"/>
    <link rel="stylesheet" href="/stylesheets/shadow.style.css"/>
    <link rel="stylesheet" href="/stylesheets/chart.style.css"/>
    <link rel="stylesheet" href="/stylesheets/button.style.css"/>
    <link rel="stylesheet" href="/stylesheets/text.style.css"/>
    <link rel="stylesheet" href="/stylesheets/card.style.css"/>
    <link rel="stylesheet" href="/stylesheets/toast.style.css"/>
    <link rel="stylesheet" href="/stylesheets/table.style.css"/>
    <link rel="stylesheet" href="/stylesheets/admin/admin.table.css"/>

    <!--    CDN TailwindCSS and Config -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/javascripts/tailwind/tailwindConfig.js"></script>

</head>
<body>
<div id="wrapper" class="w-screen h-screen bg-gray flex justify-center items-center">
    <div {{#if containerId}} id={{containerId}} {{/if}}
                             class="w-full h-screen bg-white relative overflow-hidden"
    >
        <section class="w-full h-full flex gap-4">
            <div class="w-1/5 bg-white shadow-[0_3px_10px_rgb(0,0,0,0.2)]">
                {{> adminHeader title=title buttonBackRef=buttonBackRef}}
                <div class="w-full flex flex-col justify-center items-center gap-4">
                    <button data-tab="card-themes" class="admin-tab bg-secondary text-xl text-white py-4 px-8 rounded-xl">
                        Card Themes
                    </button>
                    <button data-tab="game-topics" class="admin-tab active bg-secondary text-xl text-white py-4 px-8 rounded-xl">
                        Game Topics
                    </button>
                    <button data-tab="analytics" class="admin-tab bg-secondary text-xl text-white py-4 px-8 rounded-xl">
                        Analytics
                    </button>
                </div>
            </div>
            <main class="w-4/5 flex justify-center w-full h-max relative">
                {{{body}}}
            </main>
        </section>
        <div id="toastContainer" class="z-20 absolute w-full top-4 right-4 flex flex-col justify-center items-end gap-4">

        </div>
    </div>

</div>
<script src="/javascripts/admin/admin.process.js" type="module"></script>
{{#if listScripts}}
    {{#each listScripts}}
        <script src="/javascripts/{{this.path}}"
            {{#if this.type}}
                type={{this.type}}
            {{else}}
                type="application/javascript"
            {{/if}}

        ></script>
    {{/each}}
{{/if}}

</body>
</html>